<div class="container">
  <div class="jumbotron">
    <div class="new_session">
      <h2>Connexion</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autocomplete: "email", placeholder: "Email" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Mot de passe" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :Se_souvenir_de_moi %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Se connecter" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>